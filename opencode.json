{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "share": "manual",
  "snapshot": true,
  "permission": {
    "external_directory": {
      "*": "ask",
      "~/.config/opencode/**": "allow",
      "~/.local/share/opensrc/repos/**": "allow",
      "~/.local/share/mise/**": "allow",
      "~/.dotfiles/**": "allow",
      "~/Developer/**": "allow",
      "/tmp/side-quest-*/**": "allow"
    },
    "read": {
      "~/.ssh/**": "deny"
    },
    "bash": {
      "git push*": "ask",
      "*credentials:edit*": "deny"
    }
  },
  "plugin": [
    "opencode-anthropic-auth@latest"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "opensrc": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "opensrc-mcp"
      ]
    }
  },
  "theme": "kanagawa"
}
